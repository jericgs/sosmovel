<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>


    <!-- Action bar theme -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@color/vermelho_8D000C</item>
        <item name="background">@color/vermelho_8D000C</item>

        <item name="android:icon">@drawable/ic_launcher</item>
        <item name="icon">@drawable/ic_launcher</item>

        <item name="android:displayOptions">showTitle</item>
        <item name="displayOptions">showTitle</item>


        <!-- Support library compatibility -->

    </style>


    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">

        <item name="android:actionBarStyle" tools:targetApi="11">@style/MyActionBar</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle" >@style/MyActionBar</item>

        <item name="android:popupMenuStyle">@android:color/background_dark</item>

    </style>

</resources>
